page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #f2f2f2;
}

text {
  color: white;
  text-align: center;
}

.background-image {
  width: 100%;
  height: 100%;
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bar {
  display: flex;
  position: relative;
  align-items: center;
  height: 100rpx;
  justify-content: center;
}

.msg {
  font-size: 20px;
}

.days {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 10px;
  margin-bottom: 10px;
  padding-left: 28px;
}

.default {
  position: relative;
  top: 5px;
  left: 5px;
}

.default text {
  background-color: #f199b1;
  border-radius: 3px;
  padding-left: 5rpx;
  padding-right: 5rpx;
  font-size: 10px;
}

.date {
  font-size: 13px;
  text-align: center;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

image {
  width: 40px;
  height: 40px;
}
