page {
  background-color: white;
}

.img {
  width: 100%;
  display: inline-flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
}

.img image {
  margin-top: 10px;
  margin-left: 10px;
  position: relative;
}

.upload {
  margin-top: 10px;
  margin-left: 10px;
  border: 1px dashed #ccc;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.upload image {
  width: 50px;
  height: 50px;
  margin: 0;
}

.img .deleting {
  animation: deleting 0.5s ease;
  animation-fill-mode: forwards;
}

@keyframes deleting {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}