.toptips {
  width: 100%;
  height: 30px;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.cu-chat .cu-item.self>.main .bg-green.content::after {
  border-right-color: #F199B1;
}

.bg-green, switch.green[checked] .wx-switch-input,
switch[checked] .wx-switch-input, checkbox.green[checked] .wx-checkbox-input,
checkbox[checked] .wx-checkbox-input, radio.green[checked] .wx-radio-input,
radio[checked] .wx-radio-input {
  background-color: #F199B1 !important;
  color: #fff !important;
}

.date {
  position: absolute;
  font-size: 24rpx;
  color: #aaa;
  width: calc(100% - 320rpx);
  bottom: 20rpx;
  left: 160rpx;
  text-align: center;
}

.toptips text {
  color: white;
  font-size: 18px;
}

page {
  background-color: #f2f2f2;
  height: 100%;
  padding: 0 auto;
  margin: 0 auto;
  overflow: hidden;
}

.zezhao {
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
}

.in_voice_icon {
  z-index: 101;
  left: 0;
  bottom: 0;
  width: 100%;
  position: absolute;
  height: 220px;
  background: #f8f8f8;
}

.sendmessage image {
  width: 30px;
  height: 30px;
}

.voice_icon {
  margin-left: 20rpx;
}

.voice_face {
  margin-left: 20rpx;
}

.voice_more {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.sendmessage {
  width: 100%;
  z-index: 2;
  display: flex;
  position: fixed;
  bottom: 0px;
  background-color: #f8f8f8;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  justify-content: center;
}

.sendmessage input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  background-color: white;
  border-radius: 5px;
}

.sendmessage wux-button {
  font-size: 28rpx;
  padding: 20rpx;
  font-weight: 600;
}

.line {
  padding: 20px;
}

.item {
  z-index: 100;
}

.class_cover {
  width: 100px;
  height: 130px;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.class_outer {
  opacity: 0.5;
}

.progress {
  color: white;
  font-size: 18px;
}

.class_cover text {
  color: white;
  font-size: 18px;
}

.wux-popover-txt {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.wux-popover-txt text {
  font-size: 13px;
  padding: 12rpx;
}

.loading {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}
